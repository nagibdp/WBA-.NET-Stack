@using WBAV6.Models.ViewModels
@model UserViewModel

@{
    Layout = "_Layout2";
}

<section class="text-center">
    <div class="p-5 bg-image" style="
    background: linear-gradient(0deg, rgba(103,91,164,1) 0%, rgba(182,124,163,1) 100%);
    height: 150px; ">
    </div>

    <div class="card mx-4 mx-md-5 shadow row" style="
        flex-direction:row;
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
        <div class="col-6 d-flex" style="
        background: linear-gradient(0deg, rgba(103,91,164,1) 0%, rgba(182,124,163,1) 100%);
        ">
            <p class="text-left display-4 m-auto font-weight-light text-white">
                <span class="font-weight-bolder">W</span>eb para la <br />
                <span class="font-weight-bolder">B</span>usqueda de <br />
                <Span class="font-weight-bolder">A</Span>sesor
            </p>
        </div>
        <div class="col-6 d-flex flex-column py-5 px-0">

            <div class="container d-flex justify-content-center mx-auto">
                <form class="text-left" asp-action="Signup">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <h2 class="fw-bold mb-5 text-center">Sign up</h2>

                    <div class="row">
                        <div class="col mb-4">
                            <label asp-for="Name" class="col-form-label"></label>
                            <input asp-for="Name" class="form-control border-dark" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col mb-4">
                            <label asp-for="LastNameF" class="col-form-label"></label>
                            <input asp-for="LastNameF" class="form-control border-dark" />
                            <span asp-validation-for="LastNameF" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col mb-4">
                            <label asp-for="LastNameM" class="col-form-label"></label>
                            <input asp-for="LastNameM" class="form-control border-dark" />
                            <span asp-validation-for="LastNameM" class="text-danger"></span>
                        </div>
                        <div class="col mb-4">
                            <label asp-for="Email" class="col-form-label"></label>
                            <input asp-for="Email" class="form-control border-dark" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col mb-4">
                            <label asp-for="Pass" class="col-form-label"></label>
                            <input asp-for="Pass" class="form-control border-dark" type="password" />
                            <span asp-validation-for="Pass" class="text-danger"></span>
                        </div>
                        <div class="col mb-4">
                            <label asp-for="Career" class="col-form-label"></label>
                            <select asp-for="Career" class="form-control border-dark">
                                <option value="default" selected disabled>
                                    Elige Carrera
                                </option>
                                <option value="IC">Ingeniería en Computación</option>
                                <option value="ICE">
                                    Ingeniería en Comunicaciones y Electrónica
                                </option>
                                <option value="ISISA">Ingeniería en Sistemas Automotrices</option>
                                <option value="IM">Ingeniería Mecánica</option>
                            </select>
                            <span asp-validation-for="Career" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-check mb-4 ml-3 col">
                            <input class="form-check-input" type="checkbox" checked
                                   aria-describedby="registerCheckHelpText" />
                            <label class="form-check-label">
                                I have read and agree to the terms
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <button type="submit" class="btn btn-primary btn-block mb-3 col mx-3"
                                style="background-color:#675ba4;">
                            Registrarse
                        </button>
                    </div>

                    <div class="row mx-1">
                        <p class="col-6">volver al Login:</p>
                        <a class="btn btn-primary btn-floating col-6"
                           style="background-color: #afa9cf; "
                           asp-controller="Login"
                           asp-action="Signin">Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}