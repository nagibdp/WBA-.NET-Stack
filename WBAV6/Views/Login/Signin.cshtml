@model UserViewModel

@{
    User userSession = Context.Session.GetObjectFromJson<User>("user");
    Layout = "_Layout2";
}

<section class="text-center">
    <div class="p-5 bg-image" style=" 
    background: linear-gradient(0deg, rgba(103,91,164,1) 0%, rgba(182,124,163,1) 100%); 
    height: 200px; ">
    </div>

    <div class="card mx-4 mx-md-5 shadow row" style="
        flex-direction:row;
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
        <div class="col-6 d-flex" style="
        background: linear-gradient(0deg, rgba(103,91,164,1) 0%, rgba(182,124,163,1) 100%); 
        ">
            <p class="text-left display-4 m-auto font-weight-light text-white">
            <span class="font-weight-bolder">W</span>eb para la <br />
            <span class="font-weight-bolder">B</span>usqueda de <br />
            <Span class="font-weight-bolder">A</Span>sesor
            </p>
        </div>
        <div class="col-6 d-flex flex-column py-5 px-0">

            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <h2 class="fw-bold mb-5">Login</h2>
                    <form class="text-left" asp-action="Signin">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-outline mb-4">
                            <label asp-for="Email" class="col-form-label"></label>
                            <input asp-for="Email" class="form-control border-dark" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="Pass" class="col-form-label"></label>
                            <input asp-for="Pass" class="form-control border-dark" type="password" />
                            <span asp-validation-for="Pass" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block mb-4" style="background-color:#675ba4;">Ingresar</button>

                        <div class="row d-flex justify-content-center">
                            <p class="col">o registrarse:</p>
                            <a class="btn btn-primary btn-floating col"
                               style="background-color: #afa9cf; "
                               asp-controller="Login"
                               asp-action="Signup">Registrarse</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
